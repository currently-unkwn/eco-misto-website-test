---
// Tools
import { Icon } from "astro-icon/components";

// Components
import Link from "./ui/Link.astro";

// Data
const { socialItem } = Astro.props;
const { title, href, icon } = socialItem;
---

<li>
  <Link href={href} aria-label={title} isExternal target="_blank">
    <span class="social-link">
      <Icon name={icon} size={20} />
    </span>
  </Link>
</li>

<style>
  @import "@styles/04-utilities/breakpoints.css";

  .social-link {
    --_circle-width: 2rem;
    --_icon-width: 14px;
    --_icon-background: var(--color-secondary);
    --_icon-color: var(--color-primary);

    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--_icon-background);
    color: var(--_icon-color);

    width: var(--_circle-width);
    height: var(--_circle-width);

    border-radius: 99999px;

    opacity: 1;

    transition:
      color var(--transition-default),
      background-color var(--transition-default),
      opacity var(--transition-default);

    & svg {
      stroke: currentColor;
      height: var(--_icon-width);
      width: var(--_icon-width);
    }

    @media (--tablet-and-up) {
      --_circle-width: 3rem;

      & svg {
        --_icon-width: 20px;
      }
    }
  }

  .social-link:hover {
    opacity: 0.7;
    /* --_icon-background: var(--color-secondary-10); */
    /* --_icon-color: var(--color-secondary); */
  }
</style>
