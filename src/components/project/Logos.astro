---
import AutoFlex from "../compositions/AutoFlex.astro";
import AutoGrid from "../compositions/AutoGrid.astro";
import Center from "../compositions/Center.astro";
import Reel from "../compositions/Reel.astro";
import Stack from "../compositions/Stack.astro";
import Text from "../ui/Text.astro";
---

<Center
  maxWidth="80rem"
  space={{ default: "space-6", tablet: "space-7", laptop: "space-9" }}
>
  <div class="logos">
    <Stack space="space-8">
      <Text tagName="p" size="small" class="color-gray-400 text-center"
        >За підтримки донорів та партнерів</Text
      >

      <!-- <AutoGrid
    minItemWidth="128px"
    maxColumns="2"
    space="space-6"
    class="logos-container mobile"
    justifyItems="center"
  >
    <slot />
  </AutoGrid>
  <AutoFlex
    minItemWidth="180px"
    space="space-6"
    class="logos-container desktop"
    noStretch
    justify="start"
  >
    <slot />
  </AutoFlex> -->
      <Reel thumbColor="gray-200" trackColor="white" class="logos-reel">
        <slot />
      </Reel>
    </Stack>
  </div>
</Center>

<style>
  @import "@styles/04-utilities/breakpoints.css";

  .logos-reel {
    justify-content: center;

    & :global(svg) {
      height: 100%;
      min-width: 175px;
      /* flex: 0 0 175px; */
    }
  }

  .logos-reel.overflowing {
    justify-content: start;
  }

  /**
  * State
   */

  .logos-reel.mobile {
    display: grid;

    @media (--tablet-and-up) {
      display: none;
    }
  }

  .logos-reel.desktop {
    display: none;

    @media (--tablet-and-up) {
      display: flex;
    }
  }
</style>

