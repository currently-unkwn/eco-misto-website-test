<footer class="blockquote-footer">
  <slot />
</footer>

<style>
  .blockquote-footer {
    font-family: var(--font-text);
    text-align: left;
    margin-block-start: var(--space-9-fixed);

    letter-spacing: 0;
  }

  .blockquote-footer :global(p + p) {
    margin-block-start: var(--space-1-fixed);
  }

  /* Using nth-child, to lock styles on 1st and 2nd p tags */
  .blockquote-footer :global(p:nth-child(1)) {
    font-size: var(--text-base);
    font-weight: var(--font-medium);
  }

  .blockquote-footer :global(p:nth-child(2)) {
    font-size: var(--text-minus-1);
    font-weight: var(--font-regular);
  }
</style>
