---
import Center from "../compositions/Center.astro";
import Centered from "./Centered.astro";
---

<Centered>
  <Center maxWidth="40ch" class="text-content">
    <slot />
  </Center>
</Centered>

<style>
  @import "@styles/04-utilities/breakpoints.css";

  .text-content {
    @media (--tablet-and-up) {
      max-width: 60ch;
    }

    @media (--laptop-and-up) {
      max-width: 70ch;
    }
  }
</style>
