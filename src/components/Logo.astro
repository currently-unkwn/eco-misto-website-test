---
// Tools
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

// Components
import Link from "./ui/Link.astro";

type Props = {
  logoSrc: ImageMetadata;
  class?: string;
  [key: string]: any;
};

const { logoSrc, class: classList, ...rest } = Astro.props;
---

<Link href="/" class:list={["logo", classList]} {...rest}>
  <Image src={logoSrc} format="svg" alt="Ecomisto" />
</Link>

<style>
  /* In astro you can't use define:vars, if the component is dynamic, 
  * like we have here (Link tag), so instead we're using inline style and css variables 
  */

  .logo {
    --width: initial;
  }

  .logo img {
    /* TODO: Make responsive using clamp */
    width: var(--width, 100%);
    height: auto;
  }
</style>
