---
type spaceOptions =
  | "space-0"
  | "space-1"
  | "space-2"
  | "space-3"
  | "space-4"
  | "space-5"
  | "space-6"
  | "space-7"
  | "space-8"
  | "space-9"
  | "space-10"
  | "space-11"
  | "space-12"
  | "space-13"
  | "space-14"
  | "space-15"
  | "space-16"
  | "space-17"
  | "space-18"
  | "space-19";

interface SpaceObject {
  default?: string;
  tablet?: string;
  laptop?: string;
  desktop?: string;
}

interface Props {
  as: string;
  space: SpaceObject | spaceOptions;
  isRecursive: boolean;
  [key: string]: any;
}

const {
  as: Element,
  space,
  isRecursive,
  class: classList,
  ...rest
} = Astro.props;
---

<Element
  class:list={[
    "stack",
    classList,
    typeof space === "object" ? "" : { ["mbs-" + space]: space },
    { ["default:mbs-" + space?.default]: space?.default },
    { ["tablet:mbs-" + space?.tablet]: space?.tablet },
    { ["laptop:mbs-" + space?.laptop]: space?.laptop },
    { ["desktop:mbs-" + space?.desktop]: space?.desktop },
    { recursive: isRecursive },
  ]}
  {...rest}
>
  <slot />
</Element>

<style is:global>
  /*
  0-550px — default
  550-1100px - 34.37rem
  1100-1500px — 68.75rem
 1500px — 93.75em
*/

  @custom-media --tablet-and-up (width >= 34.37em);
  @custom-media --laptop-and-up (width >= 68.75em);
  @custom-media --desktop-and-up (width >= 93.75em);

  .stack {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .stack:only-child {
    height: 100%;
  }

  .stack > * {
    margin-block: 0;
  }

  /* Space */

  .stack.mbs-space-1 > * + *,
  .stack.default\:mbs-space-1 > * + *,
  .stack.recursive.mbs-space-1 * + * {
    margin-block-start: var(--space-1-fixed);
  }

  .stack.mbs-space-2 > * + *,
  .stack.default\:mbs-space-2 > * + *,
  .stack.recursive.mbs-space-2 * + * {
    margin-block-start: var(--space-2-fixed);
  }

