---
// Tools
import { Icon } from "astro-icon/components";

// Compositions
import Center from "../compositions/Center.astro";
import Stack from "../compositions/Stack.astro";

// Components
import Marquee from "../ui/Marquee.astro";
import Text from "../ui/Text.astro";

// Assets
const donors = [
  {
    name: "donors-usaid",
  },
  {
    name: "donors-ednannya",
  },
  {
    name: "donors-ahalar",
  },
  {
    name: "donors-czech",
  },
  {
    name: "donors-eed",
  },
  {
    name: "donors-ua-cult-fond",
  },
  {
    name: "donors-evz",
  },
  {
    name: "donors-tolocar",
  },

  {
    name: "donors-undp",
  },
];
---

<section class="donors">
  <Center maxWidth="125rem" space="space-4">
    <Stack space="space-9">
      <div class="title">
        <Text
          tagName="div"
          size="medium"
          class="color-dark-gray"
          isBadge
          variant="outline">Донори</Text
        >
      </div>

      <Marquee direction="left" space="space-4" duration="slow">
        <div class="donor-logos marquee-inner">
          {
            donors.map((donor) => {
              return (
                <div class="donor-logo">
                  <Icon name={donor.name} />
                </div>
              );
            })
          }
        </div>
      </Marquee>
    </Stack>
  </Center>
</section>

<style>
  @import "@styles/04-utilities/breakpoints.css";

  .donors {
    --_padding: var(--space-10-fixed);

    color: var(--color-secondary);
    padding-block: var(--_padding);
    /* background-color: rebeccapurple; */

    @media (--tablet-and-up) {
      --_padding: var(--space-11-fixed);
    }
  }

  .donor-logos {
    & svg {
      width: 100%;
      height: 56px;
      fill: currentColor;
    }
  }

  .donor-logo {
    width: 300px;
    height: 96px;

    display: flex;
    align-items: center;
    justify-content: center;

    /* padding-block: var(--space-5-fixed); */
  }

  .title {
    display: flex;
    justify-content: center;
  }

  .red {
    border: 1px solid red;
  }
</style>
