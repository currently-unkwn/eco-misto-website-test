---
// Tools
import { Image, Picture } from "astro:assets";

// Compositions
import Center from "../compositions/Center.astro";

// Components
import Achievment from "./Achievment.astro";
import Section from "../ui/Section.astro";

// Assets
import achievmentsBg from "../../assets/images/achievments-bg-cool.jpg";

// Data
import { achievmentsData } from "@/data/siteData";
---

<Section class="achievments">
  <Center
    maxWidth="87.5rem"
    space={{ default: "space-6", tablet: "space-7", laptop: "space-9" }}
  >
    <div class="achievments-container">
      <div class="bg-image">
        <Picture src={achievmentsBg}  formats={['avif', 'webp']} densities={[1.5, 2]} alt="" />
      </div>
      {
        achievmentsData.map((achievment) => (
          <Achievment achievment={achievment} />
        ))
      }
    </div>
  </Center>
</Section>

<style>
  @import "@styles/04-utilities/breakpoints.css";

  .achievments {
    /* padding-block-start: var(--space-7-fixed); */
    /* padding-block-end: var(--space-18-fixed); */
  }

  .achievments-container {
    position: relative;
  }

  .bg-image {
    overflow: hidden;
    border-radius: var(--rounded-2xl);

    @media (--laptop-and-up) {
      border-radius: var(--rounded-3xl);
    }

    & img {
      height: 600px;
      object-fit: cover;

      @media (--laptop-and-up) {
        height: 600px;
      }
    }
  }
</style>
