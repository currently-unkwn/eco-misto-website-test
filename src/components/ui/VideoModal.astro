---
// Tools
import { Icon } from "astro-icon/components";

// Components
import Button from "@ui/Button.astro";
---

<div class="modal-overlay jsModalOverlay" data-modal>
  <div
    class="modal"
    role="dialog"
    aria-modal="true"
    aria-label="Youtube video modal"
  >
    <Button
      class="modal__close-button jsModalClose"
      aria-label="Close youtube video"
    >
      <Icon name="icon-close" size={32} />
    </Button>

    <div class="modal__content">
      <slot />
    </div>
  </div>
</div>

<style>
  @import "@styles/03-utilities/breakpoints.css";

  .modal-overlay {
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    opacity: 0;
    z-index: -1;
    padding: var(--space-4-fixed);
    background-color: rgba(0, 0, 0, 0.8);
    visibility: hidden;
    transition:
      opacity 0.4s ease-out,
      z-index 0s 0.4s,
      visibility 0s 0.4s;
  }

  .modal-overlay.is-open {
    opacity: 1;
    z-index: 1;
    transition-delay: 0s;
    visibility: visible;
  }

  .modal__content {
    animation: round-out 0.4s var(--ease-out) forwards;
  }

  .modal-overlay.is-open .modal__content {
    animation: round-in 0.4s var(--ease-out) backwards;
    /* animation-delay: 100ms; */
  }

  .modal-overlay.is-open .modal__close-button {
    animation: fade-right 200ms 350ms var(--ease-out) forwards;

    @media (--laptop-and-up) {
      animation: fade-up 200ms 350ms var(--ease-out) forwards;
    }
  }

  .modal {
    position: relative;

    width: 90%;
    max-width: 62.5rem;
  }

  .modal__close-button {
    /* TEMP */
    /* display: none; */

    --_icon-size: 24px;

    position: absolute;
    top: 0rem;
    right: 0rem;
    padding-inline: 8px;
    font-size: 1rem;
    border-radius: 50%;
    opacity: 0;
    /* border: 2px solid var(--blue-grey-400); */
    /* background: var(--blue-grey-400); */
    color: var(--color-white);

    transform: translateX(100%);

    & svg {
      width: var(--_icon-size);
      height: var(--_icon-size);
    }

    @media (--laptop-and-up) {
      padding: 1rem;
      transform: translateY(-100%);

      --_icon-size: 32px;
    }
  }

  .modal__content > :global(.video-container) {
    aspect-ratio: 16 / 9;
    /* width: 1000px; */
    /* background-color: red; */

    & :global(iframe),
    & :global(video) {
      width: 100%;
      height: 100%;

      border: 0;
      border-radius: var(--rounded-lg);
    }
  }

  @keyframes round-in {
    0% {
      clip-path: inset(50% round 0.5rem);
    }
    100% {
      clip-path: inset(0% round 0.5rem);
    }
  }

  @keyframes round-out {
    0% {
      clip-path: inset(0% round 1.5rem);
    }
    100% {
      clip-path: inset(50% round 1.5rem);
    }
  }

  @keyframes fade-up {
    0% {
      opacity: 0;
      transform: translateY(calc(-100% + 1rem));
    }

    100% {
      opacity: 1;
      transform: translateY(-100%);
    }
  }

  @keyframes fade-right {
    0% {
      opacity: 0;
      transform: translateX(calc(100% - 1rem));
    }

    100% {
      opacity: 1;
      transform: translateX(100%);
    }
  }
</style>
