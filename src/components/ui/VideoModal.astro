<div class="modal-overlay jsModalOverlay" data-modal>
  <div
    class="modal"
    role="dialog"
    aria-modal="true"
    aria-label="Youtube video modal"
  >
    <button
      class="modal__close-button jsModalClose"
      aria-label="Close youtube video"
    >
      X
    </button>

    <div class="modal__content">
      <slot />
    </div>
  </div>
</div>

<style>
  .modal-overlay {
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    opacity: 0;
    z-index: -1;
    padding: var(--space-4-fixed);
    background-color: rgba(0, 0, 0, 0.8);
    visibility: hidden;
    transition:
      opacity 0.3s ease-out,
      z-index 0s 0.3s,
      visibility 0s 0.3s;
  }

  .modal-overlay.is-open {
    opacity: 1;
    z-index: 1;
    transition-delay: 0s;
    visibility: visible;
  }

  .modal {
    position: relative;

    width: 93.2%;
    max-width: 62.5rem;
  }

  .modal__close-button {
    position: absolute;
    top: -1.5rem;
    right: -1.5rem;
    padding: 1rem 1rem;
    font-size: 1rem;
    border-radius: 50%;
    /* border: 2px solid var(--blue-grey-400); */
    /* background: var(--blue-grey-400); */
    color: var(--color-black);
  }
</style>
