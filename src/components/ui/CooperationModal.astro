---
// Tools
import { Icon } from "astro-icon/components";

// Components
import Button from "@ui/Button.astro";
---

<div class="modal-overlay jsModalOverlay" data-modal>
  <div
    class="modal"
    role="dialog"
    aria-modal="true"
    aria-label="Cooperation form"
  >
    <Button
      class="modal__close-button jsModalClose"
      aria-label="Close cooperation form"
    >
      <Icon name="icon-close" size={32} />
    </Button>

    <div class="modal__content">
      <slot />
    </div>
  </div>
</div>

<style>
  @import "@styles/03-utilities/breakpoints.css";

  .modal-overlay {
    position: fixed;
    /* display: flex;
    justify-content: center;
    align-items: center; */
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    opacity: 0;
    z-index: -1;
    /* padding: var(--space-4-fixed); */
    background-color: rgba(0, 0, 0, 0.8);
    visibility: hidden;
    transition:
      opacity 200ms ease-out,
      z-index 0s 200ms,
      visibility 0s 200ms;
  }

  .modal-overlay.is-open {
    opacity: 1;
    z-index: 1;
    transition-delay: 0s;
    visibility: visible;
  }

  .modal {
    --_size: 100%;

    position: absolute;
    top: 0;
    right: 0;

    inline-size: var(--_size);
    block-size: 100%;

    background-color: var(--color-white);

    animation: slide-left-out 300ms var(--ease-out) forwards;

    @media (--tablet-and-up) {
      --_size: 31rem;

      border-top-left-radius: var(--rounded-lg);
      border-bottom-left-radius: var(--rounded-lg);
    }
  }

  .modal-overlay.is-open .modal {
    animation: slide-left-in 300ms var(--ease-out) backwards;
    animation-delay: 100ms;
  }

  .modal__content {
    display: flex;
    flex-direction: column;
    justify-content: center;

    height: 100%;

    padding: var(--space-7-fixed);
    /* animation: round-out 0.4s var(--ease-out) forwards; */
  }

  /* .modal-overlay.is-open .modal__content {
    animation: round-in 0.4s var(--ease-out) backwards;
  } */

  /* 
  .modal-overlay.is-open .modal__close-button {
    animation: fade-right 200ms 350ms var(--ease-out) forwards;

    @media (--laptop-and-up) {
      animation: fade-up 200ms 350ms var(--ease-out) forwards;
    }
  } */

  .modal__close-button {
    /* TEMP */
    /* display: none; */

    --_icon-size: 20px;

    position: absolute;
    top: calc(var(--space-7-fixed) - 12px);
    left: calc(var(--space-7-fixed) - 4px);
    padding: 4px;

    /* font-size: 1rem; */
    border-radius: 8px;
    /* opacity: 0; */
    /* border: 2px solid var(--blue-grey-400); */
    color: var(--color-black);

    /* transform: translateX(100%); */

    & svg {
      width: var(--_icon-size);
      height: var(--_icon-size);
    }

    @media (--laptop-and-up) {
      top: calc(var(--space-7-fixed) - 4px);
    }

    @media (--laptop-and-up) {
      --_icon-size: 24px;

      padding: 8px;
      /* transform: translateY(calc(-100% + 8px)); */
    }
  }

  .modal__close-button:hover {
    /* TODO: Pick a neutral color, add transition */
    background-color: var(--color-gray-100);
  }

  @keyframes slide-left-in {
    0% {
      transform: translateX(100%);
    }

    100% {
      transform: translateX(0);
    }
  }

  @keyframes slide-left-out {
    0% {
      transform: translateX(0);
    }

    100% {
      transform: translateX(100%);
    }
  }

  @keyframes fade-in {
    0% {
      opacity: 0;
    }

    100% {
      opacity: 1;
    }
  }
</style>
