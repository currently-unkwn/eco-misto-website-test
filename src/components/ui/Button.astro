---
const styleOptions = {
  icon: "icon",
  primary: "primary",
  secondary: "secondary",
} as const;

type Props = {
  class?: string;
  style: keyof typeof styleOptions;

  isDefault?: boolean;
  [key: string]: any;
};
const { class: classList, style, isDefault = true, ...rest } = Astro.props;
---

<button
  class:list={[
    "button",
    classList,
    styleOptions[style],
    { default: isDefault },
  ]}
  {...rest}
>
  <slot />
</button>

<style></style>
