---
const styleOptions = {
  icon: "icon",
  primary: "primary",
  secondary: "secondary",
} as const;

const sizeOptions = {
  small: "small",
  large: "large",
  "x-large": "x-large",
} as const;

type Props = {
  tagName?: "a" | "button";
  class?: string;
  style: keyof typeof styleOptions;
  size?: keyof typeof sizeOptions;

  isDefault?: boolean;
  [key: string]: any;
};
const {
  class: classList,
  tagName = "button",
  style,
  size = "large",
  isDefault = true,
  ...rest
} = Astro.props;

const Tag = tagName;
---

<Tag
  class:list={[
    "button",
    classList,
    styleOptions[style],
    sizeOptions[size],
    { default: isDefault },
  ]}
  {...rest}
>
  <slot />
</Tag>

<style></style>
