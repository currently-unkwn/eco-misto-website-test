---
import Stack from "../compositions/Stack.astro";
import Text from "./Text.astro";

const { data } = Astro.props;
const { label, name, formControl, placeholder, ...rest } = data;

console.log(rest);
const Tag = formControl;
---

<Stack space="space-1" class="input-group">
  <Text tagName="label" size="small" for={name} class="font-medium"
    >{label}</Text
  >
  <Tag id={name} name={name} placeholder={placeholder} {...rest} />
</Stack>

<style>
  .input-group {
    & input,
    & textarea {
      padding: calc(var(--space-3) - 0.1em);

      font-size: var(--text-minus-1);

      border: 1px solid var(--color-gray-200);
      border-radius: var(--rounded-md);

      outline: none;

      &::placeholder {
        color: var(--color-gray-400);
      }

      &:focus {
        border-color: var(--color-primary);
      }

      &:focus-visible {
        box-shadow:
          0 0 0 0px var(--color-white),
          0 0 0 3px var(--color-primary-03);
      }
    }

    & textarea {
      resize: none;
    }
  }
</style>
