---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

type Props = {
  src: ImageMetadata;
  alt: string;
  width?: number;
};
const { src, alt, width } = Astro.props;
---

<Picture
  src={src}
  alt={alt}
  width={width}
  formats={["avif", "webp"]}
  densities={[1.5, 2]}
/>
